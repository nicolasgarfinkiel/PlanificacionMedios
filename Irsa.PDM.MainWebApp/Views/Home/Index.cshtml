@using Irsa.PDM.MainWebApp.Security
@model Irsa.PDM.Dtos.Dashboard
<div class="row">
    <div class="col-lg-12 text-center m-t-md">
        <h2 class="dashboard-title">
            Resumen de eventos y operaciones pendientes
        </h2>      
    </div>
</div>
<br/>
<br />
<br />
<div class="row">
    @if (Model.TarifariosEditables.Any())
    {
        <div class="col-lg-6">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Tarifarios editables
                </div>
                <div class="panel-body list">
                    <div id="no-more-tables">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Id</th>
                                    <th>Fecha desde</th>
                                    <th>Fecha hasta</th>
                                    <th>Vehículo</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tarifario in Model.TarifariosEditables.Take(5))
                                {
                                    <tr>
                                        <td data-title="Id">
                                            @tarifario.Id
                                        </td>
                                        <td data-title="Fecha desde">
                                            @tarifario.FechaDesde.ToString("dd/MM/yyyy")
                                        </td>
                                        <td data-title="Fecha hasta">
                                            @tarifario.FechaHasta.ToString("dd/MM/yyyy")
                                        </td>
                                        <td data-title="Vehículo">
                                           @tarifario.Id
                                        </td>
                                        <td data-title="Ver">
                                            @Html.SecureControl(SecureControlType.TarifariosEditDashboard, tarifario)                                            
                                        </td>
                                    </tr>
                                }
                                @if (Model.TarifariosEditables.Count > 5)
                                {
                                    <tr>
                                        <td colspan="5">
                                            @Html.SecureControl(SecureControlType.TarifariosListDashboard)                                                                                        
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    
    @if (Model.TarifariosPendientesAprobacion.Any())
    {
        <div class="col-lg-6">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Tarifarios pendiente de aprobación
                </div>
                <div class="panel-body list">
                    <div id="no-more-tables">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Id</th>
                                    <th>Fecha desde</th>
                                    <th>Fecha hasta</th>
                                    <th>Vehículo</th>
                                    <th>Ver</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tarifario in Model.TarifariosPendientesAprobacion.Take(5))
                                {
                                    <tr>
                                        <td data-title="Id">
                                            @tarifario.Id
                                        </td>
                                        <td data-title="Fecha desde">
                                            @tarifario.FechaDesde.ToString("dd/MM/yyyy")
                                        </td>
                                        <td data-title="Fecha hasta">
                                            @tarifario.FechaHasta.ToString("dd/MM/yyyy")
                                        </td>
                                        <td data-title="Vehículo">
                                            @tarifario.Id
                                        </td>
                                        <td data-title="Ver">
                                            @Html.SecureControl(SecureControlType.TarifariosEditDashboard, tarifario)                                                                                       
                                        </td>
                                    </tr>
                                }
                                @if (Model.TarifariosPendientesAprobacion.Count > 5)
                                {
                                    <tr>
                                        <td colspan="5">
                                            @Html.SecureControl(SecureControlType.TarifariosListDashboard)                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    
