@if (Model.UltimasCertificaciones.Any())
{
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Últimas certificaciones recibidas
                </div>
                <div class="panel-body list">
                    <div id="no-more-tables">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Campaña</th>
                                    <th>Pauta</th>
                                    <th>Ejecutada</th>
                                    <th>Cod.Programa</th>
                                    <th>Proveedor</th>
                                    <th>Producto</th>
                                    <th>Espacio</th>
                                    <th>Costo unitario</th>
                                    <th>Total</th>
                                    <th>Información adicional</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var certificacion in Model.UltimasCertificaciones.Take(5))
                                {
                                    <tr>
                                        <td data-title="Campaña">
                                            @certificacion.CampaniaNombre
                                        </td>
                                        <td data-title="Pauta">
                                            @certificacion.PautaCodigo
                                        </td>
                                        <td data-title="Ejecutada">
                                            @certificacion.PautaEjecutadaCodigo
                                        </td>
                                        <td data-title="Cod.Programa">
                                            @certificacion.CodigoPrograma
                                        </td>
                                        <td data-title="Proveedor">
                                            @certificacion.Proveedor
                                        </td>
                                        <td data-title="Producto">
                                            @certificacion.Producto
                                        </td>
                                        <td data-title="Espacio">
                                            @certificacion.Espacio
                                        </td>
                                        <td data-title="Costo unitario">
                                            @certificacion.CostoUnitario.ToString("C")
                                        </td>
                                        <td data-title="Total">
                                            @certificacion.CostoTotal.ToString("C")
                                        </td>
                                        <td data-title="Información adicional">
                                            @certificacion.Estado
                                        </td>
                                    </tr>
                                }
                                @if (Model.UltimasCertificaciones.Count > 5)
                                {
                                    <tr>
                                        <td colspan="8">
                                            @Html.SecureControl(SecureControlType.CertificacionesListDashboard)                                                                                      
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>  
    </div>
}