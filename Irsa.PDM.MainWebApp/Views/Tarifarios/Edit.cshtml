
<div class="hpanel">
    <div class="panel-body">
        <h5 class="font-light m-b-xs">
            Administración de tarifario nro: {{entity.id}}
        </h5>
        <small>Vehículo: <b>{{entity.vehiculo.nombre}}</b>  - Fecha desde: {{entity.fechaDesde}} - Fecha hasta: {{entity.fechaHasta}}</small>
    </div>
</div>

<div class="hpanel hblue">
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="row">
                <div class="col-sm-12">
                    <div class="input-group m-b">
                        <input type="text" class="input-sm form-control" placeholder="Buscar" ng-model="filter.multiColumnSearchText" ng-debounce="1200">
                        <span class="input-group-addon">
                            <i class="fa fa-search"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div id="no-more-tables">
                <table class="col-sm-12 table-bordered table-striped table-condensed cf">
                    <thead class="cf">
                        <tr>
                            <th style="width: 10%">
                                Medio
                                <div class="btn-group" style="float: right;">
                                    <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" ng-click="setAux('medios')"><span class="fa fa-level-down"></span></button>
                                    <ul class="dropdown-menu filter" role="menu">
                                        <li ng-repeat="medio in data.mediosBase">
                                            <input type="checkbox" ng-checked="filter.mediosAux.indexOf(medio.nombre) != -1" ng-click="toggleCheck('medios', medio.nombre)" /> {{medio.nombre}}
                                        </li>
                                        <li class="divider"></li>
                                        <li class="text-right">
                                            <button class="btn btn-primary btn-xs" ng-click="applyFilter('medios')">Aplicar</button>
                                            <button class="btn btn-default btn-xs" ng-click="clearFilter('medios', $event)">Limpiar</button>
                                        </li>
                                    </ul>
                                </div>
                            </th>
                            <th style="width: 12%">
                                Plaza
                                <div class="btn-group" style="float: right;">
                                    <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" ng-click="setAux('plazas')"><span class="fa fa-level-down"></span></button>
                                    <ul class="dropdown-menu filter" role="menu">
                                        <li ng-repeat="plaza in data.plazas">
                                            <input type="checkbox" ng-checked="filter.plazasAux.indexOf(plaza.id) != -1" ng-click="toggleCheck('plazas', plaza.id)" /> {{plaza.codigo}}
                                        </li>
                                        <li class="divider"></li>
                                        <li class="text-right">
                                            <button class="btn btn-primary btn-xs" ng-click="applyFilter('plazas')">Aplicar</button>
                                            <button class="btn btn-default btn-xs" ng-click="clearFilter('plazas', $event)">Limpiar</button>
                                        </li>
                                    </ul>
                                </div>
                            </th>                          
                            <th style="width: 25%">
                                Días
                                <div class="btn-group" style="float: right;">
                                    <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" ng-click="setAux('dias')"><span class="fa fa-level-down"></span></button>
                                    <ul class="dropdown-menu filter" role="menu">
                                        <li ng-repeat="dia in dias">
                                            <input type="checkbox" ng-checked="filter.diasAux.indexOf(dia) != -1" ng-click="toggleCheck('dias', dia)" /> {{dia}}
                                        </li>
                                        <li class="divider"></li>
                                        <li class="text-right">
                                            <button class="btn btn-primary btn-xs" ng-click="applyFilter('dias')">Aplicar</button>
                                            <button class="btn btn-default btn-xs" ng-click="clearFilter('dias', $event)">Limpiar</button>
                                        </li>
                                    </ul>
                                </div>
                            </th>
                            <th style="width: 8%">
                                Hs.D
                                <div class="btn-group" style="float: right;">
                                    <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" ng-click="setAuxHoras('horaDesde')"><span class="fa fa-level-down"></span></button>
                                    <ul class="dropdown-menu filter" role="menu">
                                        <li style="font-weight: normal;">
                                            <div class="small" style="margin-top: 5px;">
                                                <input type="text" ng-model="filter.horaDesdeAux" int maxlength="4" />
                                            </div>
                                        </li>
                                        <li class="divider"></li>
                                        <li class="text-right">
                                            <button class="btn btn-primary btn-xs" ng-click="applyFilterHoras('horaDesde')">Aplicar</button>
                                            <button class="btn btn-default btn-xs" ng-click="clearFilterHoras('horaDesde', $event)">Limpiar</button>
                                        </li>
                                    </ul>
                                </div>
                            </th>
                            <th style="width: 8%">
                                Hs.H
                                <div class="btn-group" style="float: right;">
                                    <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" ng-click="setAuxHoras('horaHasta')"><span class="fa fa-level-down"></span></button>
                                    <ul class="dropdown-menu filter" role="menu">
                                        <li style="font-weight: normal;">
                                            <div class="small" style="margin-top: 5px;">
                                                <input type="text" ng-model="filter.horaHastaAux" int maxlength="4" />
                                            </div>
                                        </li>
                                        <li class="divider"></li>
                                        <li class="text-right">
                                            <button class="btn btn-primary btn-xs" ng-click="applyFilterHoras('horaHasta')">Aplicar</button>
                                            <button class="btn btn-default btn-xs" ng-click="clearFilterHoras('horaHasta', $event)">Limpiar</button>
                                        </li>
                                    </ul>
                                </div>
                            </th>                       
                            <th>
                                Descripción
                            </th>
                            <th style="width: 8%">
                                Importe
                                <div class="btn-group" style="float: right;" ng-show="entity.estado == 'Editable'">
                                    <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" ng-click="importe = null; invalidImporte = false;"><span class="fa fa-edit"></span></button>
                                    <ul class="dropdown-menu filter" role="menu">
                                        <li ng-class="{error: invalidImporte}">
                                            <small>Importe</small>
                                            <input type="text" ng-model="importe" style="font-weight: normal; padding: 2px; font-size: 11px;" fcsa-number="{ prepend: '$' }" />
                                        </li>
                                        <li class="divider"></li>
                                        <li class="text-right">
                                            <button class="btn btn-primary btn-xs" ng-click="setImportes($event)" ng-show="importe">Aplicar</button>
                                        </li>
                                    </ul>
                                </div>
                            </th>
                            <th style="width: 7%">
                                O.C.
                                <div class="btn-group" style="float: right;" ng-show="entity.estado == 'Editable'">
                                    <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" ng-click="oc = null; invalidOc = false;"><span class="fa fa-edit"></span></button>
                                    <ul class="dropdown-menu filter " role="menu" style=" left: -71px;">
                                        <li ng-class="{error: invalidOc}">
                                            <small>Órden de compra</small>
                                            <input type="text" ng-model="oc" style="font-weight: normal; padding: 2px; font-size: 11px;" int />
                                        </li>
                                        <li class="divider"></li>
                                        <li class="text-right">
                                            <button class="btn btn-primary btn-xs" ng-click="setOrdenesDeCompra($event)" ng-show="oc">Aplicar</button>
                                        </li>
                                    </ul>
                                </div>
                            </th>
                            <th style="width: 3%"></th>
                        </tr>
                    </thead>
                    <tbody style="font-size: 11px;">
                        <tr ng-repeat="tarifa in tarifas">
                            <td data-title="Medio">
                                <span>{{tarifa.medioNombre}}</span>
                            </td>
                            <td data-title="Plaza">
                                <span>{{tarifa.plazaCodigo}}</span>
                            </td>                           
                            <td data-title="Días">
                                <span class="day-list">
                                    <span ng-if="tarifa.lunes">Lun</span>
                                    <span ng-if="tarifa.martes">Mar</span>
                                    <span ng-if="tarifa.miercoles">Mie</span>
                                    <span ng-if="tarifa.jueves">Jue</span>
                                    <span ng-if="tarifa.viernes">Vie</span>
                                    <span ng-if="tarifa.sabado">Sab</span>
                                    <span ng-if="tarifa.domingo">Dom</span>
                                </span>
                            </td>
                            <td data-title="Hora desde">
                                <span>{{tarifa.horaDesdeFormatted}}</span>
                            </td>
                            <td data-title="Hora hasta">
                                <span>{{tarifa.horaHastaFormatted}}</span>
                            </td>                         
                            <td data-title="Descripción">
                                <span>{{tarifa.descripcion}}</span>                                
                            </td>
                            <td data-title="Importe" ng-class="{error: tarifa.invalidTarifa}">
                                <span ng-if="entity.estado != 'Editable'">{{tarifa.importe | currency}}</span>
                                <input type="text" ng-model="tarifa.importe" ng-if="entity.estado == 'Editable'" ng-keypress="tarifa.edited = true" fcsa-number="{ prepend: '$' }" />
                            </td>
                            <td data-title="OC" >
                                <span ng-if="entity.estado != 'Editable'">{{tarifa.ordenDeCompra}}</span>
                                <input type="text" ng-model="tarifa.ordenDeCompra" int ng-if="entity.estado == 'Editable'" ng-keypress="tarifa.edited = true" />
                            </td>
                            <td>
                                <button class="btn btn-primary btn-xs" type="button" ng-click="setEditable(tarifa)" ng-if="entity.estado == 'Editable' && tarifa.edited"><i class="fa fa-save"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row pdm-pager">                  
                    <div class="col-sm-12">
                        <div class="text-center">
                            <ul class="pagination">
                                <li class="previous" ng-class="{'disabled': isFirstPage()}">
                                    <a href="javascript:void(0)" ng-click="goToPreviousPage()"><</a>
                                </li>
                                <li class="active">
                                    <a href="javascript:void(0)">Página {{filter.currentPage}} de {{filter.pageCount}} - Registros: <b>{{filter.count}}</b></a>                                    
                                </li>                              
                                <li class="next" ng-class="{'disabled': isLastPage()}">
                                    <a href="javascript:void(0)" ng-click="goToNextPage()">></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-danger" ng-if="result.hasErrors">
                <i class="fa fa-bolt"></i>
                <div ng-repeat="message in result.messages">{{message}}</div>
            </div>
        </form>
    </div>
    <div class="panel-footer text-right">
        @*<button type="button" class="btn btn-primary" ng-click="save()">Guardar</button>*@
    </div>
</div>





